{
    "manifest_version": 2,

    "name": "JS Runner",
    "short_name": "JS Runner",
    "version": "1.0",

    "description": "Расширение для хранения и выполнения JS-скриптов",

    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "browser_action": {
        "default_title": "JS Runner",
        "default_icon": "icons/48x48.png",
        "default_popup": "screen.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ]
}